@page
@model IndexModel


<div class="container-fluid">
    <div>

        <h1 class="text-center-block">Halloween eGreetings for All!!</h1>
        <div class="col-xs-12 col-md-6">
            @Html.Partial("_Card")
        </div>


        <div class="col-xs-12 col-md-6">

            @if (Model.isPreviewPage)
            {
                @Html.Partial("_Preview")
            }
            else
            {
                @Html.Partial("_Form")



                @section Scripts {
                    <script src="~/js/ww-form-character-countdown.js"></script>
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
                }
            }

        </div>

    </div>
</div>
